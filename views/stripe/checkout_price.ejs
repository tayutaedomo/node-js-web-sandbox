<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12">
    <form action="/stripe/checkout_price" method="POST">
      <div class="form-group">
        <label>Email:</label>
        <input type="text" name="email" value="<%if (data.params.email) { %><%= data.params.email %><% } %>">
      </div>

      <script src="https://checkout.stripe.com/checkout.js"
              class="stripe-button"
              data-key="pk_test_7fvh7dT8TfcKxZa2USG3zEOy"
              data-name="Stripe.com"
              data-description="2 widgets"
              data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
              data-locale="auto"
              data-zip-code="true">
      </script>
    </form>
  </div>
</div>

<div class="row" style="margin-top: 20px;">
  <div class="col-sm-12">
    <% if (data.error) { %>
      <label>API call Failed</label>
      <pre class="bg-danger"><code><%= data.error %></code></pre>
    <% } %>

    <% if (data.result) { %>
      <label>API call succeeded</label>
      <pre class="bg-success"><code><%= data.result %></code></pre>
    <% } %>
  </div>
</div>

