<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12">
    <form method="post" action="/cache/redis/get">
      <div class="form-group">
        <label>Key:</label>
        <input type="text" name="key" value="<%if (data.params.key) { %><%= data.params.key %><% } %>">
      </div>

      <button type="submit" class="btn btn-info">Submit</button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <% if (data.error) { %>
    <label>API call Failed</label>
    <pre class="bg-danger"><code><%= data.errorStr %></code></pre>
    <% } %>

    <% if (data.result) { %>
    <label>API call succeeded</label>
    <pre class="bg-success"><code><%= data.resultStr %></code></pre>
    <% } %>
  </div>
</div>

