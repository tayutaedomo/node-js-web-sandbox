<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12 col-md-6">
    <form method="post" action="/crypto/decrypt">
      <div class="form-group">
        <label>Email (KEY)</label>
        <input type="text" name="email" required style="width: 300px;">
      </div>

      <div class="form-group">
        <label>Contents</label>
        <textarea name="text" row="5" class="form-control"></textarea>
      </div>

      <button type="submit" class="btn btn-info">Submit</button>
    </form>
  </div>
</div>

<div class="row" style="margin-top: 20px;">
  <div class="col-sm-12">
    <% if (data.error) { %>
      <label>Error:</label>
      <pre class="bg-danger"><code><%= data.error %></code></pre>
    <% } %>

    <% if (data.result) { %>
      <label>Result:</label>
      <pre class="bg-success"><code><%= data.result %></code></pre>
    <% } %>
  </div>
</div>

