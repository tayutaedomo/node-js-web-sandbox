<% layout('layout') %>


<% block('additional_javascript_tags').append('<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>') %>
<% block('additional_javascript_tags').append('<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>') %>


<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12">
    <button onClick="pdfMake.createPdf(docDefinition).open();">Open PDF</button>
  </div>
</div>


<script type="text/javascript">
  var docDefinition = { content: 'This is an sample PDF printed with pdfMake' };
</script>

