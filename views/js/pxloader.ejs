<% layout('layout') %>

<% block('additional_javascript_tags').append('<script type="text/javascript" src="/javascripts/pxloader/pxloader-images.min.js"></script>') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12">
    <p>
      See: <a href="http://thinkpixellab.com/pxloader/" target="_blank">http://thinkpixellab.com/pxloader/</a>
    </p>
  </div>
</div>

<script type="text/javascript">
  // Create the loader and queue our 3 images. Images will not
  // begin downloading until we tell the loader to start.
  var loader = new PxLoader();
  var img = loader.addImage('/images/shutterstock_125750330.jpg');
  loader.addImage('/images/shutterstock_522257740.jpg');

  // callback that will be run once images are ready
  loader.addCompletionListener(function() {
    alert('Loaded');
    console.log('Loaded');
  });

  // begin downloading images
  loader.start();
</script>

