<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-4">
    <h4>Original</h4>
    <img style="width: 200px; height: 200px;" src="/images/shutterstock_522257740_small.jpg">
  </div>
  <div class="col-sm-4">
    <h4>Trimmed</h4>
    <canvas style="width: 200px; height: 200px;" id="canvas"></canvas>
  </div>
</div>

<script type="text/javascript">
  (function() {
    var img = new Image();
    img.src = '/images/shutterstock_522257740_small.jpg';

    img.onload = function() {
      var canvas = document.querySelector('#canvas');
      canvas.width = img.width;
      canvas.height = img.height / 2;

      var context = canvas.getContext('2d');
      context.drawImage(img,
        0, 0, img.width, img.height / 2,
        0, 0, canvas.width, canvas.height);
    };
  })();
</script>

